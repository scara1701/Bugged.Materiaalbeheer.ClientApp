<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Ingenium.Materiaalbeheer.ClientApp"
             x:Class="Ingenium.Materiaalbeheer.ClientApp.HomePage"
             Title="Home">
    <ContentPage.Resources>
        <Style x:Key="DashboardButton" TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="HeightRequest" Value="200" />
            <Setter Property="WidthRequest" Value="200" />
        </Style>
    </ContentPage.Resources>
    <ScrollView>
        <FlexLayout AlignItems="Start" JustifyContent="Start" Margin="20,0" Wrap="Wrap" VerticalOptions="Start" >
            <controls:DashView FlexLayout.Grow="1" />
            <controls:DashView FlexLayout.Grow="1"/>
            <controls:DashView FlexLayout.Grow="1"/>
            <controls:DashView FlexLayout.Grow="1"/>
            <controls:DashView FlexLayout.Grow="1"/>
            <controls:DashView FlexLayout.Grow="1"/>
            <controls:DashView FlexLayout.Grow="1"/>
            <controls:DashView FlexLayout.Grow="1"/>
        </FlexLayout>
    </ScrollView>
</ContentPage>
